{
  "name": "Productivity Tracker",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "scripting",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
